{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Security updates for infrastructure: Docker images, CI/CD, and Helm charts",
  "packageRules": [
    {
      "matchCategories": ["docker"],
      "matchUpdateTypes": ["patch", "minor", "major"],
      "groupName": "Docker image security updates",
      "schedule": ["at any time"],
      "labels": ["üê≥ Docker Security"],
      "minimumReleaseAge": "1 day",
      "prPriority": 15
    },
    {
      "matchCategories": ["ci"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "CI/CD security updates",
      "schedule": ["at any time"],
      "labels": ["‚ö° CI/CD Security"],
      "minimumReleaseAge": "1 day",
      "prPriority": 13
    },
    {
      "matchCategories": ["helm"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "Helm chart security updates",
      "schedule": ["at any time"],
      "labels": ["‚éà Helm Security"],
      "minimumReleaseAge": "1 day",
      "prPriority": 14
    }
  ]
}
