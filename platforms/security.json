{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Security updates for infrastructure, Docker images, CI/CD, and platform components",
  "packageRules": [
    {
      "matchManagers": ["dockerfile", "docker-compose"],
      "matchPackageNames": ["node", "alpine", "ubuntu", "debian", "nginx", "redis", "postgres", "mysql", "python", "golang", "openjdk", "ruby"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "Docker base image security updates",
      "schedule": ["at any time"],
      "labels": ["üê≥ Docker Security"],
      "minimumReleaseAge": "1 day",
      "prPriority": 15
    },
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "GitHub Actions security updates",
      "schedule": ["at any time"],
      "labels": ["‚ö° Actions Security"],
      "minimumReleaseAge": "1 day",
      "prPriority": 13
    },
    {
      "matchManagers": ["terraform"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "Terraform provider security updates",
      "schedule": ["at any time"],
      "labels": ["üèóÔ∏è Terraform Security"],
      "minimumReleaseAge": "1 day",
      "prPriority": 13
    },
    {
      "matchManagers": ["helm-values", "kubernetes"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "Kubernetes security updates",
      "schedule": ["at any time"],
      "labels": ["‚ò∏Ô∏è K8s Security"],
      "minimumReleaseAge": "1 day",
      "prPriority": 13
    }
  ]
}