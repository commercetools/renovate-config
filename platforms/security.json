{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Security updates for infrastructure: Docker images and CI/CD",
  "packageRules": [
    {
      "matchManagers": ["dockerfile", "docker-compose"],
      "matchUpdateTypes": ["patch", "minor", "major"],
      "groupName": "Docker image security updates",
      "schedule": ["at any time"],
      "labels": ["üê≥ Docker Security"],
      "minimumReleaseAge": "1 day",
      "prPriority": 15
    },
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "GitHub Actions security updates",
      "schedule": ["at any time"],
      "labels": ["‚ö° Actions Security"],
      "minimumReleaseAge": "1 day",
      "prPriority": 13
    }
  ]
}