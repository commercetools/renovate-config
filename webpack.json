{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Groups Webpack bundler and Webpack-specific loaders",
  "packageRules": [
    {
      "matchPackageNames": ["webpack", "postcss-loader"],
      "matchPackagePatterns": ["^webpack-"],
      "groupName": "all webpack packages"
    }
  ]
}
