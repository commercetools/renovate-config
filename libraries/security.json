{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Security-focused configuration for package vulnerabilities and security patches across all package managers",
  "extends": [
    "security:openssf-scorecard"
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "/.*-security$/",
      "groupName": "security patches",
      "schedule": ["at any time"],
      "labels": ["ğŸ”’ Security Patch"],
      "minimumReleaseAge": null,
      "prPriority": 10
    },
    {
      "matchPackageNames": ["*"],
      "vulnerabilityFixPrPriority": 20,
      "vulnerabilityFixGroupName": "security vulnerabilities",
      "vulnerabilityFixSchedule": ["at any time"],
      "vulnerabilityFixLabels": ["ğŸš¨ Security Vulnerability"],
      "vulnerabilityFixMinimumReleaseAge": null
    },
    {
      "matchUpdateTypes": ["patch"],
      "matchPackageNames": ["*"],
      "labels": ["ğŸ“¦ Patch Update"],
      "schedule": ["before 10am on weekdays"],
      "minimumReleaseAge": "1 day"
    },
    {
      "matchManagers": ["pip_requirements", "pip_setup", "pipenv", "poetry"],
      "matchUpdateTypes": ["patch"],
      "groupName": "Python security patches",
      "schedule": ["at any time"],
      "labels": ["ğŸ Python Security"],
      "minimumReleaseAge": "1 day",
      "prPriority": 12
