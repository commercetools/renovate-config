{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Groups state management and routing libraries",
  "packageRules": [
    {
      "matchPackageNames": [
        "redux",
        "react-redux",
        "react-router",
        "react-router-dom",
        "history",
        "@types/react-redux",
        "@types/react-router-dom",
        "@types/history"
      ],
      "groupName": "all state and routing packages"
    },
    {
      "matchPackageNames": [
        "react-router",
        "react-router-dom"
      ],
      "allowedVersions": "< 6"
    },
    {
      "matchPackageNames": [
        "history",
        "@types/history"
      ],
      "allowedVersions": "< 5"
    }
  ]
}
